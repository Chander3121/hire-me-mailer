<div class="max-w-md mx-auto mt-10 bg-white/10 rounded-lg p-6 shadow-lg">
  <h2 class="text-xl font-semibold mb-4 text-center">Sign Up</h2>

  <%= form_with(model: resource, url: registration_path(resource_name), local: true, class: "space-y-4") do |f| %>
    <%= devise_error_messages! %>

    <div>
      <%= f.label :email, class: "block text-sm font-medium mb-1" %>
      <%= f.email_field :email, autofocus: true, class: "w-full px-3 py-2 rounded bg-white/50" %>
    </div>

    <div>
      <%= f.label :password, class: "block text-sm font-medium mb-1" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 rounded bg-white/50" %>
    </div>

    <div>
      <%= f.label :password_confirmation, class: "block text-sm font-medium mb-1" %>
      <%= f.password_field :password_confirmation, class: "w-full px-3 py-2 rounded bg-white/50" %>
    </div>

    <div>
      <%= f.submit "Sign Up", class: "w-full px-4 py-2 bg-green-600 text-white rounded" %>
    </div>
  <% end %>

  <p class="mt-4 text-center text-sm">
    Already have an account? <%= link_to "Log In", new_session_path(resource_name), class: "text-blue-500 underline" %>
  </p>
</div>
