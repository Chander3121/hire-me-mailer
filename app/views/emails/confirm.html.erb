<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="w-full max-w-4xl">
    <!-- Main Card -->
    <div class="backdrop-blur-lg bg-white/20 border border-white/30 rounded-3xl shadow-2xl overflow-hidden">
      <!-- Header with gradient -->
      <div class="bg-gradient-to-br from-emerald-500/80 via-green-500/80 to-teal-600/80 backdrop-blur-sm px-8 py-12 border-b border-white/20 relative overflow-hidden">
        <!-- Background pattern -->
        <div class="absolute inset-0 opacity-10">
          <svg class="w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
            <defs>
              <pattern id="grid" width="20" height="20" patternUnits="userSpaceOnUse">
                <path d="M 20 0 L 0 0 0 20" fill="none" stroke="white" stroke-width="0.5"/>
              </pattern>
            </defs>
            <rect width="100" height="100" fill="url(#grid)" />
          </svg>
        </div>
        
        <div class="relative z-10">
          <h1 class="text-4xl font-bold text-white mb-2">Review & Confirm</h1>
          <p class="text-green-100 text-lg">Everything looks good? Let's send your resume!</p>
        </div>
      </div>

      <!-- Content -->
      <div class="p-8 sm:p-12">
        <div class="space-y-8">
          
          <!-- Subject Card -->
          <div class="group">
            <div class="flex items-center gap-2 mb-3">
              <div class="w-8 h-8 rounded-full bg-blue-400/30 flex items-center justify-center border border-blue-300/50">
                <svg class="w-4 h-4 text-blue-300" fill="currentColor" viewBox="0 0 20 20"><path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4z"></path><path d="M3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6z"></path><path d="M14 9a1 1 0 00-1 1v6a1 1 0 001 1h1a1 1 0 001-1v-6a1 1 0 00-1-1h-1z"></path></svg>
              </div>
              <p class="text-xs font-bold text-white/70 uppercase tracking-wide">Subject</p>
            </div>
            <div class="bg-blue-400/10 backdrop-blur-sm border border-blue-300/30 rounded-xl p-5 group-hover:bg-blue-400/20 transition">
              <p class="text-xl font-semibold text-white"><%= @subject %></p>
            </div>
          </div>

          <!-- Email Body Card -->
          <div class="group">
            <div class="flex items-center gap-2 mb-3">
              <div class="w-8 h-8 rounded-full bg-purple-400/30 flex items-center justify-center border border-purple-300/50">
                <svg class="w-4 h-4 text-purple-300" fill="currentColor" viewBox="0 0 20 20"><path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path><path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path></svg>
              </div>
              <p class="text-xs font-bold text-white/70 uppercase tracking-wide">Message</p>
            </div>
            <div class="bg-purple-400/10 backdrop-blur-sm border border-purple-300/30 rounded-xl p-6 max-h-72 overflow-y-auto group-hover:bg-purple-400/20 transition">
              <div class="prose prose-sm max-w-none text-white/90 prose-invert">
                <%= @body&.html_safe %>
              </div>
            </div>
          </div>

          <!-- Recipients Card -->
          <div class="group">
            <div class="flex items-center justify-between mb-3">
              <div class="flex items-center gap-2">
                <div class="w-8 h-8 rounded-full bg-green-400/30 flex items-center justify-center border border-green-300/50">
                  <svg class="w-4 h-4 text-green-300" fill="currentColor" viewBox="0 0 20 20"><path d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"></path></svg>
                </div>
                <p class="text-xs font-bold text-white/70 uppercase tracking-wide">Recipients</p>
              </div>
              <span class="px-3 py-1 rounded-full bg-green-400/20 border border-green-300/30 text-xs font-semibold text-green-200">
                <%= @emails&.count %> email<%= @emails&.count != 1 ? 's' : '' %>
              </span>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3">
              <% @emails&.each do |email| %>
                <div class="flex items-center gap-3 px-4 py-3 bg-green-400/10 backdrop-blur-sm rounded-lg border border-green-300/30 hover:bg-green-400/20 transition">
                  <div class="w-8 h-8 rounded-full bg-green-400/30 flex items-center justify-center flex-shrink-0">
                    <svg class="w-4 h-4 text-green-300" fill="currentColor" viewBox="0 0 20 20"><path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path><path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path></svg>
                  </div>
                  <span class="text-sm text-white/90 truncate"><%= email %></span>
                </div>
              <% end %>
            </div>
          </div>

          <!-- Resume Info -->
          <% if @resume_filename.present? %>
            <div class="flex items-start gap-4 p-5 bg-amber-400/15 backdrop-blur-sm border border-amber-300/40 rounded-xl">
              <div class="w-10 h-10 rounded-lg bg-amber-400/30 flex items-center justify-center flex-shrink-0 border border-amber-300/50">
                <svg class="w-5 h-5 text-amber-300" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M8 4a3 3 0 00-3 3v4a5 5 0 0010 0V7a1 1 0 112 0v4a7 7 0 11-14 0V7a5 5 0 0110 0v4a3 3 0 11-6 0V7a1 1 0 012 0v4a1 1 0 102 0V7a3 3 0 00-3-3z"></path></svg>
              </div>
              <div>
                <p class="text-xs font-bold text-amber-200 uppercase tracking-wide mb-1">Attachment</p>
                <p class="text-sm text-white/90 break-all"><%= @resume_filename %></p>
              </div>
            </div>
          <% end %>

          <!-- Actions -->
          <div class="flex gap-4 pt-8 border-t border-white/20">
            <%= form_with url: send_emails_emails_path, method: :post, local: true, class: "flex-1" do %>
              <button type="submit" class="w-full flex items-center justify-center gap-3 bg-gradient-to-r from-emerald-500 to-green-600 text-white font-bold py-4 rounded-xl hover:from-emerald-600 hover:to-green-700 transition shadow-lg hover:shadow-2xl transform hover:scale-105 duration-200">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
                <span class="text-lg">Confirm & Send</span>
              </button>
            <% end %>

            <%= link_to edit_emails_path, class: "flex-1 text-center bg-white/10 backdrop-blur-sm border border-white/30 text-white font-bold py-4 rounded-xl hover:bg-white/20 transition flex items-center justify-center gap-2" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5"/></svg>
              <span> Edit</span>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Info text -->
    <p class="text-center text-white/60 text-sm mt-6">Emails will be sent with a 1-minute delay between each recipient to avoid spam filters</p>
  </div>
</div>
