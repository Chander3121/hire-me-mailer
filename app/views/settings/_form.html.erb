<%= form_with model: @setting, url: setting_path, local: true do |f| %>
  <% if @setting.errors.any? %>
    <div class="mb-3 text-red-500">
      <p><strong>Please fix the errors:</strong></p>
      <ul>
        <% @setting.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :email, class: 'block text-sm font-medium text-gray-700' %>
    <%= f.email_field :email, class: 'w-full px-3 py-2 rounded' %>
  </div>

  <div class="mb-3">
    <%= f.label :gmail_app_password, 'Gmail App Password', class: 'block text-sm font-medium text-gray-700' %>
    <%= f.text_field :gmail_app_password, class: 'w-full px-3 py-2 rounded' %>
  </div>

  <div class="mb-3">
    <%= f.label :tinymce, 'TinyMCE API Key', class: 'block text-sm font-medium text-gray-700' %>
    <%= f.text_field :tinymce, class: 'w-full px-3 py-2 rounded' %>
  </div>

  <div>
    <%= f.submit (@setting.persisted? ? 'Update Settings' : 'Save Settings'), class: 'px-4 py-2 bg-blue-600 text-white rounded cursor-pointer' %>
  </div>
<% end %>
