<div class="min-h-screen p-8">
  <div class="max-w-6xl mx-auto">
    <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl shadow-md overflow-hidden">
      <div class="px-6 py-5 bg-gradient-to-r from-slate-700 to-slate-800">
        <h2 class="text-2xl font-bold text-white">Email Logs</h2>
        <p class="text-sm text-white/70">Recent send attempts and their status</p>
      </div>

      <div class="p-4 sm:p-6">
        <div class="overflow-x-auto">
          <table class="w-full text-left table-auto">
            <thead>
              <tr class="text-sm text-white/70">
                <th class="px-4 py-3">Recipient</th>
                <th class="px-4 py-3">Subject</th>
                <th class="px-4 py-3">Status</th>
                <th class="px-4 py-3">Sent At</th>
              </tr>
            </thead>
            <tbody>
              <% @logs.each do |log| %>
                <tr class="border-t border-white/10 hover:bg-white/2 transition">
                  <td class="px-4 py-4"><div class="text-sm text-white"><%= log.email %></div></td>
                  <td class="px-4 py-4"><div class="text-sm text-white/90 truncate"><%= log.subject %></div></td>
                  <td class="px-4 py-4">
                    <% status_class = case log.status
                      when 'sent' then 'bg-emerald-500 text-white'
                      when 'pending' then 'bg-yellow-400 text-black'
                      when 'failed' then 'bg-red-500 text-white'
                      else 'bg-gray-400 text-white'
                    end %>
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold <%= status_class %>"><%= log.status.capitalize %></span>
                  </td>
                  <td class="px-4 py-4"><div class="text-sm text-white/80"><%= log.sent_at.present? ? l(log.sent_at, format: :short) : '-' %></div></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
